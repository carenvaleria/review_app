<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @subject.name %>
</p>

<p>
  <strong>Synopsis:</strong>
  <%= @subject.synopsis %>
</p>

<p>
  <strong>Year:</strong>
  <%= @subject.year %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @subject.genre %>
</p>

<h1>Listing Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Review</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subject.reviews.each do |review| %>
      <tr>
        <td><%= review.title %></td>
        <td><%= review.review %></td>
        <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "New Review", new_review_path(subject_id: @subject.id) %>
<%= link_to 'Edit', edit_subject_path(@subject) %> |
<%= link_to 'Back', subjects_path %> |
<%= link_to 'Home', users_path %>
