<p id="notice"><%= notice %></p>

<h1>Listing Subjects</h1>
<%= link_to "New Subject", new_subject_path %>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Synopsis</th>
      <th>Year</th>
      <th>Genre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subjects.each do |subject| %>
      <tr>
        <td><%= subject.name %></td>
        <td><%= subject.synopsis %></td>
        <td><%= subject.year %></td>
        <td><%= subject.genre %></td>
        <td><%= link_to 'Show', subject %></td>
        <td><%= link_to 'Edit', edit_subject_path(subject) %></td>
        <td><%= link_to 'Destroy', subject, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

